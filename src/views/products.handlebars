<h2>Products Real-Times</h2>

<form class="displayRow" id="form">
  <i>Título:</i>
  <input type="text" name="title" />
  <br />
  <i>Descripción:</i>
  <input type="text" name="description" />
  <br />
  <i>Precio:</i>
  <input type="number" name="price" />
  <br />
  <i>Imagen</i>
  <input type="text" name="thumbnail" />

  <button class="btn" type="submit">Enviar</button>
</form>

<table class="tabla">
  <thead>
    <tr class="columna">
      <th>ID</th>
      <th>Título</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Imagen</th>
      <th>Stock</th>
      <th>Código</th>
    </tr>
  </thead>
  <tbody id="table-list">
    {{#each products}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.thumbnail}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.code}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/productRealtime.js"></script>